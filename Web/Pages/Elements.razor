@page "/elements"
@using Integrant4.Element.Bits

<style>
    li {
        margin: 3px 0;
        vertical-align: middle;
    }
</style>

<ul>
    <li>@_intInput.Render()</li>
    <li>@_intInput0Null.Render()</li>
    <li>@_decimalInput.Render()</li>
    <li>@_decimalInput0Null.Render()</li>
    <li>@_decimalInputStepped.Render()</li>
    <li></li>
    <li>@_checkboxInput.Render()</li>
</ul>

<ul>
    <li>@_buttonNoIcon.Renderer()</li>
    <li>@_buttonOnlyIcon.Renderer()</li>
    <li>@_buttonIconFirst.Renderer()</li>
    <li>@_buttonIconLast.Renderer()</li>
</ul>

<ul>
    @foreach (Button button in _buttonsColored)
    {
        <li>@button.Renderer()</li>
    }
</ul>

<ul>
    <li>@_chip.Renderer()</li>
    <li>@_chipLink.Renderer()</li>
    <li></li>
    <li>@_checkbox.Renderer()</li>
    <li></li>
    <li>@_link1.Renderer()</li>
    <li>@_link2.Renderer()</li>
    <li>@_link3.Renderer()</li>
</ul>
 